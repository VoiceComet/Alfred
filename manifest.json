{
	"manifest_version": 2,

	"name": "Alfred - Your personal speech-controlled butler",
	"description": "Alfred is a Chrome Extension which allows the user to control the browser only by voice commands.",
	"version": "0.1",

	"permissions": [
		"tabs",
		"notifications",
		"history"
	],

	"background": {
		"scripts": [
			"scripts/jquery-3.1.0.min.js",
			"scripts/jquery.mark.min.js",
			"scripts/backgroundUtils.js",
			"scripts/classes/Module.js",
			"scripts/classes/State.js",
			"scripts/classes/Action.js",
			"scripts/classes/Command.js",
			"scripts/background.js",
			"scripts/modules/moduleList.js",
			"scripts/modules/zoomModule.js",
			"scripts/modules/searchModule.js",
			"scripts/modules/objectModule.js"
		]
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"css": [
				"ui.css",
				"zoomUI.css",
				"objectUI.css"
			],
			"js": [
				"scripts/jquery-3.1.0.min.js",
				"scripts/jquery.mark.min.js",
				"scripts/classes/ContentScriptMethod.js",
				"scripts/contentScript.js",
				"scripts/modules/BrowserActionsModule.csm.js",
				"scripts/modules/WeatherModule.csm.js",
				"scripts/modules/zoomModule.csm.js",
				"scripts/modules/searchModule.csm.js",
				"scripts/modules/objectModule.csm.js"
			]
		}
	],
	
	"browser_action": {
		"default_icon": { "128": "images/mic_on.png" }
	},

	"web_accessible_resources": [
		"images/mic_both.png",
		"images/mic_hear.png",
		"images/mic_work.png",
		"images/mic_muted.png",
		"images/mic_normal.png",
        "images/grid.png",
		"ui.html",
        "ui.css",
		"zoomUI.html",
		"zoomUI.css",
		"objectUI.css",
		"objectUI.html",
		"scripts/modules/WeatherModule.html"
	]
}