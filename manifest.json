{
	"manifest_version": 2,

	"name": "Chrome Speech Control",
	"description": "This extension adds a speech control option to your browser.",
	"version": "1.0",

	"permissions": [
		"tabs",
		"notifications",
		"history"
	],

	"background": {
		"scripts": [
			"scripts/utils.js",
			"scripts/classes/Module.js",
			"scripts/classes/State.js",
			"scripts/classes/Action.js",
			"scripts/classes/Command.js",
			"scripts/background.js"
		]
	},
	
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["scripts/jquery-3.1.0.min.js", "scripts/contentScript.js"]
		}
	],
	
	"browser_action": {
		"default_icon": { "128": "images/mic_on.png" }
	},

	"web_accessible_resources": [
		"images/mic_both.png",
		"images/mic_hear.png",
		"images/mic_work.png",
		"images/mic_muted.png",
		"images/mic_normal.png",
		"ui.html",
        "ui.css"
	]
}